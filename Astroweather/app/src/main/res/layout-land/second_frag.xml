<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="true"
    android:layout_alignParentStart="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingEnd="20dp"
    android:paddingStart="20dp">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/moon" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:measureWithLargestChild="false"
        android:gravity="center_vertical|center_horizontal"
        android:paddingStart="20dp">
        <TableRow android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="14dp"
                android:text="@string/moon_moonrise"
                android:textStyle="bold"
                android:gravity="right" />
            <TextView
                android:id="@+id/moon_moonrise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="14dp"
                android:text="..."
                android:gravity="left" />
        </TableRow>
        <TableRow android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="14dp"
                android:text="@string/moon_moonset"
                android:textStyle="bold"
                android:gravity="right" />
            <TextView
                android:id="@+id/moon_moonset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="14dp"
                android:text="..."
                android:gravity="left" />
        </TableRow>
        <TableRow android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="14dp"
                android:text="@string/moon_age"
                android:textStyle="bold"
                android:gravity="right" />
            <TextView
                android:id="@+id/moon_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="14dp"
                android:text="..."
                android:gravity="left" />
        </TableRow>
        <TableRow android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="14dp"
                android:text="@string/moon_illumination"
                android:textStyle="bold"
                android:gravity="right" />
            <TextView
                android:id="@+id/moon_illumination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="14dp"
                android:text="..."
                android:gravity="left" />
        </TableRow>
        <TableRow android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="14dp"
                android:text="@string/moon_nextfullmoon"
                android:textStyle="bold"
                android:gravity="right" />
            <TextView
                android:id="@+id/moon_nextfullmoon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="14dp"
                android:text="..."
                android:gravity="left" />
        </TableRow>
        <TableRow android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="14dp"
                android:text="@string/moon_nextnewmoon"
                android:textStyle="bold"
                android:gravity="right" />
            <TextView
                android:id="@+id/moon_nextnewmoon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="14dp"
                android:text="..."
                android:gravity="left" />
        </TableRow>
    </TableLayout>
</LinearLayout>